

<%= form_with model: @user,
  url: update_profile_picture_user_path(@user),
  method: :patch,
  data: { controller: 'upload-image', 'upload-image-target': 'form' },
  local: true do |form| %>
  <div>
    <%= form.label :profile_picture, :image do %>
      <%= image_tag "attach-image.svg", alt: "attach image"  %>
    <% end %>
    <%= form.file_field :profile_picture,
    data: { 'upload-image-target': 'fileField', action: 'input->upload-image#filepicked' }, class: 'hidden' %>
  </div>
  <div class="actions">
    <%= form.submit class: 'hidden' %>
  </div>
<% end %>

<%= form_with model: comment,
    url: comment.persisted? ? user_post_comment_path(comment.post.author, comment.post, comment) : user_post_comments_path(@user, @post),
    method: comment.persisted? ? :patch : :post, data: { controller: 'form', action: 'turbo:submit-end->form#reset' } do |form| %>
    <% if comment.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
          <% comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :content, ': ' %>
      <%= form.text_field :content, placeholder: 'Write a comment...', data: { target: 'form.contentField' } %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
